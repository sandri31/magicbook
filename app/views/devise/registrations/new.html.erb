<div class="row align-items-center mx-auto g-lg-5 py-5">
  <div class="col-12 col-md-10 mx-auto col-lg-5 p-4 p-md-5 card" style="margin-top: 100px;">

    <h2 class="mb-4">S'inscrire</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mb-3">
        <%= f.label :pseudo %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :mot_de_passe %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :confirmation_du_mot_de_passe %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "S'inscrire", class: "mt-4 btn btn-dark w-100 mb-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="row align-items-center mx-auto g-lg-5 py-5">
  <div class="col-12 col-md-10 mx-auto col-lg-5 p-4 p-md-5 card" style="margin-top: 200px;">
    <h2 class="mb-4">Connexion</h2>
    <%= form_for(resource, as: resource_name, url: user_session_url, data: { turbo: false }) do |f| %>
      <div class="form-group mb-3">
        <%= f.label :pseudo_ou_email %><br />
        <%= f.text_field :login, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :mot_de_passe %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Connexion", class: "mt-4 btn btn-dark w-100 mb-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
